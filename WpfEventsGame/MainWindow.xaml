<Window x:Class="WpfEventsGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfEventsGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="400">
    <Grid Background="Beige" x:Name="playerGrid">
        <Button Content="-1HP" HorizontalAlignment="Left" Margin="50,50,0,0" VerticalAlignment="Top" Height="75" Width="75" Click="LoseHp_Click"/>
        <Button Content="+1HP" HorizontalAlignment="Left" Margin="250,50,0,0" VerticalAlignment="Top" Height="75" Width="75" Click="GetHp_Click"/>
        <Label x:Name="lblHealth" Content="Label" HorizontalAlignment="Left" Margin="158,50,0,0" VerticalAlignment="Center" FontSize="20" Height="75"/>
        <Label x:Name="lblPlayerName" Content="Player" HorizontalAlignment="Left" Margin="170,100,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
